    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }, {
            "name": "Python Debugger: Console w/o args",
            "type": "debugpy",
            "request": "launch",
            "module": "sqlcompose",
            "console": "integratedTerminal"
        }, {
            "name": "Python Debugger: Console",
            "type": "debugpy",
            "request": "launch",
            "module": "sqlcompose",
            "args": [ "tests/main-query.sql" ],
            "console": "integratedTerminal"
        }
    ]
}